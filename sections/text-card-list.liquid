<div
  class="section-text-card-list"
  style="--bg-img: url({{ 'wave-right-lg.png' | asset_url }});"
>
  <div class="container padding-lg">
    <div class="richtext text-center">
      <h2 class="container-half h2 text-accent-2">{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      {%- if section.settings.cta_link -%}
        <p>
          <a href="{{ section.settings.cta_link }}" class="link accent-1">
            {{ section.settings.cta_label }} >
          </a>
        </p>
      {%- endif -%}
    </div>

    {%- assign cards = section.blocks | where: 'type', 'card' | map: 'settings' -%}
    <ul class="text-card-list">
      {%- for card in cards -%}
        <li class="text-card-item richtext">
          <figure>
            <img
              {% render 'srcset', image: card.image, width: 600 %}
              alt="{{ card.image.alt | default: card.heading }}"
              loading="lazy"
            />
          </figure>
          <h3 class="h4-body text-accent-2">{{ card.heading }}</h3>
          <p>{{ card.description }}</p>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

{% stylesheet %}
  .section-text-card-list {
    position: relative;
  }

  .section-text-card-list::before {
    content: '';
    position: absolute;
    right: 0; top: 50%;
    transform: translateY(-50%);
    display: inline-block;
    width: 50%; height: 65%;
    background: var(--bg-img) right/contain no-repeat;
  }

  .section-text-card-list > * {
    position: relative;
    z-index: 1;
  }

  .text-card-list {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
  }

  .text-card-item {
    scroll-snap-align: center;
    flex: 1 0 250px;
  }

  .text-card-item h3 {
    font-family: var(--font-body);
  }

  /* tablet */
  @media screen and (max-width: 768px) {
    .text-card-list {
      box-sizing: border-box;
      padding: 0 1rem 0.5rem;
      width: 100vw;
      margin-inline: calc(50% - 50vw);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Text card list",
  "tag": "section",
  "class": "bg",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA link"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Text card",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
