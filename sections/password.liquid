{{ 'section-password.css' | asset_url | stylesheet_tag }}

<h1 class="h1">{{ shop.name }}</h1>

{% form 'storefront_password' %}
  {{ form_errors | default_errors }}

  <label>
    <input class="input" name="password" type="password" placeholder="Password" />
  </label>

  <button class="action">Sign in</button>
{% endform %}

{% if shop.password_message != blank %}
  <p>{{ shop.password_message }}</p>
{% endif %}

{% schema %}
{
  "name": "Password",
  "tag": "section",
  "class": "section-padding container-sm section-padding side-padding text-center",
  "settings": [

  ]
}
{% endschema %}
