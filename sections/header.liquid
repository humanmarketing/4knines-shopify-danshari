<a href="{{ routes.root_url }}" class="link">
  {{- shop.name -}}
</a>

<a href="{{ routes.account_url }}" class="link">
  Account
</a>

<a href="{{ routes.cart_url }}" class="link">
  Cart ({{ cart.item_count }})
</a>

{%- if section.settings.navigation.links != blank -%}
  <ul>
    {%- for link in section.settings.navigation.links -%}
      <li>
        <a href="{{ link.url }}" class="link">{{ link.title }}</a>
      </li>
    {%- endfor -%}
  </ul>
{%- endif -%}

{%- if section.settings.sticky -%}
  <style>
    .header { position: sticky; top: 0; }
  </style>
{%- endif -%}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "checkbox",
      "id": "sticky",
      "label": "Sticky",
      "default": true
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Navigation",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
