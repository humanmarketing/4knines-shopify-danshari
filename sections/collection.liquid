{% render 'collection-header' %}

<ul class="collection-product-list">
  {%- case collection.handle -%}
    {%- when 'back-seat-covers-for-dogs-pets' -%}
      <li>
        <figure>
          <img
            {% render 'srcset', image: 'collection-back-seat-covers.png', width: 600, asset: true %}
            alt="{{ collection.title }}" loading="lazy" draggable="false"
          />
        </figure>
      </li>
  {%- endcase -%}

  {%- for product in collection.products -%}
    <li>
      {% render 'product-item' product: product %}
    </li>
  {%- endfor -%}
</ul>

{% stylesheet %}
  .collection-product-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 2rem 1.5rem;
    margin-top: 3rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection",
  "tag": "article",
  "class": "section-collection container section-padding-lg side-padding"
}
{% endschema %}
