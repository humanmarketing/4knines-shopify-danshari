{% render 'collection-header' %}

<ul class="collection-product-list">
  {%- for product in collection.products -%}
    <li>{% render 'product-item' product: product %}</li>
  {%- endfor -%}
</ul>

{% stylesheet %}
  .collection-product-list {
    display: grid;
    grid-template-columns: repeat(var(--col, 2), 1fr);
    gap: 2rem 1.5rem;
    margin-top: 3rem;
  }

  .collection-img-insert { height: 100%; }
  .collection-img-insert img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .section-collection .stamped-badge { cursor: initial; }
  .section-collection .stamped-badge-caption { display: none; }

  /* desktop-and-up */
  @media screen and (min-width: 769px) {
    .collection-product-list { --col: 4; }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection",
  "tag": "article",
  "class": "section-collection container padding-lg"
}
{% endschema %}
