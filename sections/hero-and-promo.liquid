{%- liquid
  assign scheduled_list = section.blocks | where: 'type', 'scheduled' | map: 'settings'
  for scheduled in scheduled_list
    if scheduled.summer_time
      assign add_time = 3600
    else
      assign add_time = 0
    endif

    assign today_date = 'now' | replace: '-0500', '-0800' | date: '%s' | plus: add_time
    assign start_date = scheduled.start_datetime | append: ' -0800' | date: '%s' | times: 1
    assign end_date = scheduled.end_datetime | append: ' -0800' | date: '%s' | times: 1

    if today_date >= start_date and today_date <= end_date
      assign show_scheduled = true
      assign active_scheduled = scheduled
    endif
  endfor

  assign promo = section.blocks | where: 'type', 'promo' | map: 'settings' | first
-%}

<div class="section-hero padding-lg {% if promo != blank %}promo-enabled{% endif %}">
  {%- liquid
    if show_scheduled and active_scheduled != blank
      render 'hero', data: active_scheduled
    else
      render 'hero', data: section.settings
    endif
  -%}
</div>

{%- if promo != blank -%}
  <article
    class="section-promo padding-lg bg"
    style="--bg-img: url('{{ 'wave-right-top-bottom-lg.png' | asset_url }}');"
  >
    <div class="{{ promo.container_size | default: 'container_half' }} text-center richtext">
      <h2 class="h2 text-accent-2">{{ promo.heading }}</h2>
      {%- if promo.description -%}
        <p class="h4-body">{{ promo.description | newline_to_br }}</p>
      {%- endif -%}
      {%- if promo.cta_link -%}
        <div>
          <a href="{{ promo.cta_link }}" class="action">
            {%- if promo.cta_label != blank -%}
              {{ promo.cta_label }}
            {%- else -%}
              Shop {{ promo.cta_link.object.title }}
            {%- endif -%}
          </a>
        </div>
      {%- endif -%}
    </div>
  </article>
{%- endif -%}

{% stylesheet %}
  .section-hero {
    position: relative;
    background: var(--bg-img) center/cover no-repeat;
  }

  .section-promo,
  .section-promo > * {
    position: relative;
  }

  .section-promo::before {
    content: '';
    position: absolute;
    left: 0; top: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-img) right/contain no-repeat;
  }

  /* tablet */
  @media screen and (max-width: 768px) {
    .section-hero {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .section-hero.promo-enabled { padding-bottom: 6rem; }

    .section-promo {
      position: relative;
      z-index: 1;
      margin: -4rem 2rem 0;
      padding-top: 2rem;
      padding-bottom: 2rem;
      overflow: hidden;
    }

    .section-promo::before {
      transform: scale(-1.75, 1.75) translateX(-20%);
      opacity: 0.4;
    }

    .section-promo h2 {
      font-size: var(--h3);
    }
    .section-promo p { font-size: var(--h5); }
  }
{% endstylesheet %}

