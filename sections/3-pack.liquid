<header class="multi-col center container padding-lg" style="--col: 3;">
  <h2 class="h2 text-accent-2">{{ section.settings.heading }}</h2>
  <p class="pack-3-desc">{{ section.settings.description }}</p>
</header>

<ul class="multi-col center" style="--col: 3; gap: 0;">
  {%- assign items = section.blocks | where: 'type', 'item' | map: 'settings' -%}
  {%- for item in items -%}
    <li class="pack-3-item padding text-center">
      <img
        {% render 'srcset', image: item.image, width: 800 %}
        alt="{{ item.cta_labe }}" loading="lazy" draggable="false"
      />
      {%- if item.cta_link != blank -%}
        <a href="{{ item.cta_link }}" class="pack-3-cta action">{{ item.cta_label }}</a>
      {%- else -%}
        <span class="pack-3-cta action" style="pointer-events: none;">{{ item.cta_label }}</span>
      {%- endif -%}
    </li>
  {%- endfor -%}
</ul>

{% stylesheet %}
  .pack-3 header { line-height: 1.3; }

  .pack-3-item {
    position: relative;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    min-height: 200px;
  }

  .pack-3-item img {
    position: absolute;
    left: 0; top: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .pack-3-cta {
    position: relative;
    z-index: 1;
    font-size: var(--h4);
  }

  /* desktop-and-up */
  @media screen and (min-width: 769px) {
    .pack-3-item { min-height: 300px; }
    .pack-3-desc { grid-column: span 2; }
  }

  /* tablet */
  @media screen and (max-width: 768px) {
    .pack-3 header { text-align: center; }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "3-pack",
  "tag": "section",
  "class": "pack-3",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Weâ€™ve Got You Covered"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Although we initially intended to make the best car seat covers for dogs on the market, our products provide excellent utility for other applications including messy kids and help to prevent overall wear and tear on your car."
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "cta_label",
          "label": "CTA label"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "default": {
    "blocks": [
      {
        "type": "item",
        "settings": {
          "cta_label": "Dogs"
        }
      },
      {
        "type": "item",
        "settings": {
          "cta_label": "Kids"
        }
      },
      {
        "type": "item",
        "settings": {
          "cta_label": "Wear and Tear"
        }
      }
    ]
  }
}
{% endschema %}
