  <div class="page-width" data-aos>
  {% if block.settings.title != blank %}
    <header class="section-header" data-aos>
      <h2 class="section-header__title appear-delay">
        {{ block.settings.title }}
      </h2>
    </header>
  {% endif %}

  {%- assign text_column_count = 0 -%}
  {%- assign column_1_enabled = false -%}
  {%- assign column_2_enabled = false -%}
  {%- assign column_3_enabled = false -%}
  {% if block.settings.code_1 %}
    {%- assign column_1_enabled = true -%}
    {%- assign text_column_count = text_column_count | plus: 1 -%}
  {% endif %}
  {% if block.settings.code_2 %}
    {%- assign column_2_enabled = true -%}
    {%- assign text_column_count = text_column_count | plus: 1 -%}
  {% endif %}
  

  {% case text_column_count %}
    {% when 1 %}
      {%- assign grid_item_width = '' -%}
    {% when 2 %}
      {%- assign grid_item_width = 'medium-up--one-half' -%}
    {% when 3 %}
      {%- assign grid_item_width = 'medium-up--one-third' -%}
  {% endcase %}

  <div class="grid grid--uniform text-{{ block.settings.align_text }}">
    
    {% if column_1_enabled %}
      <div class="grid__item grid-column {{ grid_item_width }} appear-delay-1">
        {% if block.settings.title_1 != blank %}
          <div class="h2">{{ block.settings.title_1 }}</div>
        {% endif %}
        {% if block.settings.text_1 != blank %}
          <div class="rte-setting text-spacing">{{ block.settings.text_1 }}</div>
        {% endif %}
        {% if block.settings.button_label_1 != blank %}
          <a href="{{ block.settings.button_link_1 }}" class="btn btn--tertiary btn--small">
            {{ block.settings.button_label_1 }}
          </a>
        {% endif %}
        {{ block.settings.code_1 }}
          {% endif %}
      </div>

	{% if column_2_enabled %}
      <div class="grid__item grid-column {{ grid_item_width }} appear-delay-1">
        {% if block.settings.title_2 != blank %}
          <div class="h2">{{ block.settings.title_2 }}</div>
        {% endif %}
        {% if block.settings.text_2 != blank %}
          <div class="rte-setting text-spacing">{{ block.settings.text_2 }}</div>
        {% endif %}
        {% if block.settings.button_label_2 != blank %}
          <a href="{{ block.settings.button_link_2 }}" class="btn btn--tertiary btn--small">
            {{ block.settings.button_label_2 }}
          </a>
        {% endif %}
        {{ block.settings.code_2 }}
          {% endif %}
      </div>


    
  </div>
</div>

