<form class="search-form" action="{{ routes.search_url }}">
  <label>
    <input
      class="search-input appearance-reset"
      name="q"
      value="{% if search.performed -%}{{ search.terms | escape }}{%- endif %}"
      type="search"
      placeholder="Search"
    />
  </label>

  <button class="search-button appearance-reset" type="submit">
    {% render 'icon-search' %}
  </button>

  {%- if settings.predictive_search_enabled -%}
    <ul class="search-suggestions"></ul>
  {%- endif -%}
</form>
