{%- comment -%}
  class?
  type?
  disableSuggestions?
{%- endcomment -%}

<form class="search-form {{ class }}" action="{{ routes.search_url }}">
  {%- if type != blank -%}
    <input name="type" value="{{ type }}" type="hidden">
  {%- endif -%}

  <label class="search-form-label">
    <input
      class="search-input unset"
      name="q"
      value="{% if search.performed -%}{{ search.terms | escape }}{%- endif %}"
      type="search"
      autocomplete="off"
      placeholder="Search"
    />
  </label>

  <button class="search-button unset" type="submit">
    {% render 'icon-search' %}
  </button>

  {%- if settings.predictive_search_enabled and disableSuggestions != true -%}
    <ul class="search-suggestions"></ul>
  {%- endif -%}
</form>
