@font-face {
  font-family: 'Pockota';
  src:
    url({{ 'Pockota-Regular.woff2' | asset_url }}) format('woff2'),
    url({{ 'Pockota-Regular.woff' | asset_url }}) format('woff'),
    url({{ 'Pockota-Regular.ttf' | asset_url }}) format('truetype');
