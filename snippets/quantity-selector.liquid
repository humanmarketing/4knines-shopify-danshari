{%- comment -%}
  label?
  id?
  name
  value?
{%- endcomment -%}

<label for="qty{{ id }}" class="qty-selector{% if label %} paragraph-sm{% endif %}">
  {% if label %}
    <div class="font-heading">
      <small>{{ label }}</small>
    </div>
  {% endif %}

  <div class="qty-inputs">
    <button class="qty-inc unset" data-inc="-1">-</button>
    <input
      class="qty-value font-heading unset"
      id="qty{{ id }}" name="{{ name }}"
      type="number"
      value="{{ value | default: 1 }}"
      min="1"
      size="3"
    />
    <button class="qty-inc unset" data-inc="1">+</button>
  </div>
</label>
