<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>
    {%- if page_title != shop.name -%}
      {{- page_title }} | {{ shop.name -}}
    {%- else -%}
      {{- shop.name -}}
    {%- endif -%}
  </title>

  <meta name="description" content="{{ page_description | escape }}">
  {%- render 'meta-tags' -%}

  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="icon" href="{{ settings.favicon | img_url: '32x32' }}">

  <link rel="preload" href="{{ 'Pockota-Regular.woff2' | asset_url }}" type="font/woff2" as="font" crossorigin>

  {%- render 'root.css' %}
  {{ 'reset.css' | asset_url | stylesheet_tag }}
  {{ 'theme.css' | asset_url | stylesheet_tag }}

  {{ content_for_header }}

  {% render 'magiczoomplus.headers' %}
</head>

<body>
  {% section 'announcement' %}
  {% section 'header' %}

  <main {% if request.page_type == 'captcha' %}class="padding-lg"{% endif %}>
    {{ content_for_layout }}
  </main>

  {% section 'newsletter' %}
  {% section 'footer' %}

  {% render 'schema' %}

  <script src="{{ 'theme.min.js' | asset_url }}" defer></script>
  {%- if settings.predictive_search_enabled -%}
    {% render 'predictive-search' %}
  {%- endif -%}

  {%- if request.page_type == 'collection' or request.page_type == 'product' -%}
    <script async type="text/javascript" data-api-key="" id="stamped-script-widget" src="https://cdn-stamped-io.azureedge.net/files/widget.min.js"></script>
  {%- endif -%}
</body>

</html>
